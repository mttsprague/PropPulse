rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Export images - user-specific
    match /exports/{uid}/{fileName} {
      allow read: if true; // Public signed URLs
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Search index - public read, Cloud Functions write
    match /search/{fileName} {
      allow read: if true; // Public access for search index
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Scraper cache - admin only
    match /scraper-cache/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Manual data uploads - admin only
    match /manual-uploads/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}
